<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".SplitHalfActivity"
    tools:ignore="ExtraText">

    <!-- Título principal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dos mitades"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Saludo al usuario -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola alejing@gmail.com"
        android:textColor="#FF616161"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- Instrucciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Te voy a ayudar a solucionar el problema de las 2 mitades."
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Lista numerada de instrucciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Ingresa una cadena de caracteres."
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Te ayudaré a cortar la cadena en dos partes \"
        android:iguales\" (si la longitud es impar, la primera mitad tendrá un carácter más)."
    android:textColor="#FF000000"
    android:textSize="16sp"
    android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Mostraré la nueva cadena con las mitades intercambiadas."
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="24dp"/>

    <!-- Campo de entrada -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa una cadena de caracteres"
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ejemplo: Hello"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="#FF000000"
        android:textSize="16sp"/>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="24dp"/>

    <!-- Botón para solucionar -->
    <Button
        android:id="@+id/btnSolve"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Solucionar"
        android:backgroundTint="#5AE4A8"
        android:textColor="#FF000000"
        android:textSize="18sp"/>

    <!-- Resultado -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF5AE4A8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>
</LinearLayout>